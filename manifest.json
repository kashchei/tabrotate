{
  "manifest_version": 3,
  "name": "Tab Rotation",
  "version": "1.3.0",
  "description": "Automatically rotates through tabs with configurable intervals and background refresh for kiosk displays.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js"],
      "run_at": "document_end"
    }
  ]
}